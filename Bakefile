include devtools/python/Bakefile devtools/common/Bakefile

export MYPYPATH=./stubs
export PYTHONPATH=.
export PROJECT_NAME=asyncapi

//build-docs:
    mkdocs build
    cp docs/changelog.md CHANGELOG.md
    cp docs/contributing.md CONTRIBUTING.md
    cd docs
    ../devtools/common/replace-placeholders.py index.md ../README.md
    sed -i -r "s/${PROJECT_NAME}-python-white.svg/${PROJECT_NAME}-python.svg/g" ../README.md

deploy: //check-virtualenv @confirm:secure deploy-docs release-pypi push-release

setup-asyncapi: //check-virtualenv
    pip install --force-reinstall git+https://github.com/pycqa/pyflakes

coverage: //check-virtualenv
    coverage combine .coverage.* \
        docs/src/.coverage.* \
        docs/src/auto_spec/.coverage.* \
        docs/src/gcloud_pubsub/.coverage.*
    coverage report
    coverage xml

docker:
    docker-compose up -d

docker-pubsub:
    docker-compose up pubsub pubsub-init

docker-kafka:
    docker-compose up kafka

docker-down:
    docker-compose down

docker-logs:
    docker-compose up

tests-docs-index-yaml-spec:
    bats docs/src/yaml_spec

tests-docs-index-python-spec:
    bats docs/src/python_spec

tests-docs-auto-spec-python:
    bats docs/src/auto_spec/python_spec

tests-docs-auto-spec-http:
    bats docs/src/auto_spec/http_spec

tests-docs-pubsub-http-spec:
    bats docs/src/gcloud_pubsub/http_spec

tests-docs-pubsub-python-spec:
    bats docs/src/gcloud_pubsub/python_spec

tests-docs-pubsub-server-bindings:
    bats docs/src/gcloud_pubsub/server_bindings

tests-docs: tests-docs-index-yaml-spec tests-docs-index-python-spec tests-docs-auto-spec-python tests-docs-auto-spec-http tests-docs-pubsub-http-spec tests-docs-pubsub-python-spec tests-docs-pubsub-server-bindings

tests: tests-code tests-docs-index-yaml-spec tests-docs-index-python-spec tests-docs-auto-spec-python tests-docs-auto-spec-http tests-docs-pubsub-http-spec tests-docs-pubsub-python-spec tests-docs-pubsub-server-bindings

integration: check-code tests-code tests-docs-index-yaml-spec tests-docs-index-python-spec tests-docs-auto-spec-python tests-docs-auto-spec-http tests-docs-pubsub-http-spec tests-docs-pubsub-python-spec tests-docs-pubsub-server-bindings coverage
